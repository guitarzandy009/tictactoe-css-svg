// Basic styles for Tic Tac Toe
:root
  --primary-color: #2c3e50
  --secondary-color: #3498db
  --background: #ecf0f1
  --cell-size: 100px

body
  font-family: Arial, sans-serif
  background: var(--background)
  margin: 0
  padding: 20px
  display: flex
  justify-content: center
  align-items: center
  min-height: 100vh

.game-container
  max-width: 400px
  margin: 0 auto
  text-align: center
  background: white
  padding: 2rem
  border-radius: 12px
  box-shadow: 0 10px 30px rgba(0,0,0,0.1)

h1
  color: var(--primary-color)
  margin-bottom: 2rem
